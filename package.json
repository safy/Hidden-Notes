{
  "name": "hidden-notes",
  "version": "1.0.0",
  "description": "Chrome Extension для создания заметок с визуальным скрытием конфиденциальной информации",
  "type": "module",
  "author": "Hidden Notes Team",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "notes",
    "privacy",
    "rich-text-editor",
    "tiptap"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/hidden-notes.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "type-check": "tsc --noEmit",
    "generate:icons": "node scripts/generate-icons.js",
    "prebuild": "npm run generate:icons",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "@tiptap/extension-collaboration": "^3.7.2",
    "@tiptap/extension-color": "^3.7.0",
    "@tiptap/extension-drag-handle": "^3.7.2",
    "@tiptap/extension-drag-handle-react": "^3.7.2",
    "@tiptap/extension-highlight": "^3.7.1",
    "@tiptap/extension-image": "^2.26.3",
    "@tiptap/extension-link": "^2.26.3",
    "@tiptap/extension-list": "^3.7.0",
    "@tiptap/extension-list-item": "^3.7.0",
    "@tiptap/extension-node-range": "^3.7.2",
    "@tiptap/extension-table": "^2.26.3",
    "@tiptap/extension-table-cell": "^2.26.3",
    "@tiptap/extension-table-header": "^2.26.3",
    "@tiptap/extension-table-row": "^2.26.3",
    "@tiptap/extension-task-item": "^2.26.3",
    "@tiptap/extension-task-list": "^2.26.3",
    "@tiptap/extension-text-align": "^3.7.0",
    "@tiptap/extension-text-style": "^3.7.0",
    "@tiptap/extension-underline": "^2.26.3",
    "@tiptap/react": "^2.26.3",
    "@tiptap/starter-kit": "^2.26.3",
    "@tiptap/y-tiptap": "^3.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^25.6.0",
    "lucide-react": "^0.400.0",
    "nanoid": "^5.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.2.1",
    "tailwind-merge": "^2.5.2",
    "y-protocols": "^1.0.6",
    "yjs": "^13.6.27",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "@playwright/test": "^1.56.0",
    "@types/chrome": "^0.0.270",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "canvas": "^3.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "shadcn": "^3.4.0",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  }
}
